<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no"/>
<meta name="apple-mobile-web-app-capable" content="yes"/>
<style type="text/css">
	html, body {
		margin: 0px;
		padding: 0px
	}
	#nav {
		height: 30px;
	}

	#container {
		margin: 0;
		padding: 0;
	}

	@media only screen and (max-width: 639px) {
		#map {
			position: fixed;
			top: 30px;
			margin: 0;
			padding: 0;
		}
		#list {
			width: 100%;
			margin: 0px 0px 0px 0px;
			padding: 0;
		}
	}

	@media only screen and (min-width: 639px) {
		#map {
			float: left;
			margin: 0px 5px 0px 5px;
			padding: 0;
		}
		#list {
			float: left;
			margin: 0px 5px 0px 5px;
			padding: 0;
		}
	}

	span {
		margin: 0px;
		padding: 0px;
	}
	button {
		font: bold 25px;
		background-color: white;
		border: 1px solid black;
	}

	#map_name {
		font-size: 20px;
		font-weight: bold;
	}
	#map_tags, #map_referer {
		font-size: 10px;
		font-weight: normal;
	}
	.map_comments {
		margin-top: 8px;
	}
	#add_pick {
		text-align: center;
	}

	#create_form {
		width: 100%;
		margin: 0;
		padding: 0;
	}
	#create_form h1 {
		margin: 3px 5px 10px 5px;
		padding: 0;
	}
	#create_form h2 {
		margin: 5px 5px 5px 5px;
		font-size: 12px;
		padding: 0;
	}
	label {
		display: block;
		margin: 0px 5px 0px 5px;
		padding: 0;
	}
	.input {
		font-size: 22px;
		height: 25px;
		margin: 0px 5px 0px 5px;
		padding: 0;
	}
	textarea {
		font-size: 22px;
		height: 45px;
		margin: 0px 5px 0px 5px;
		padding: 0;
	}
	#add_map {
		margin: 0px 5px 5px 5px;
	}

        #list h1 {
                margin: 0;
                padding: 5px 5px 5px 5px;
                font-size: 20px;
                font-weight: bold;
        }
        #list h2 {
                margin: 0;
                padding: 5px 5px 5px 5px;
                font-size: 10px;
                font-weight: normal;
        }
	#listButton, #list, #map, #create_form, #add_pick {
		display: none;
	}
	.left {
		display: table-cell;
		width: 50%;
		margin:0px;
		padding:0px;
	}
	.right {
		display: table-cell;
		width: 50%;
		margin:0px;
		padding:0px;
		text-align: right;	
	}
	.item {
		display: table;
		width: 100%;
		margin: 0px;
		padding: 0px;
		border-top: 1px solid black;	
	}
</style>
<title>Fancy Foodie</title>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript" src="http://code.google.com/apis/gears/gears_init.js"></script>
<script type="text/javascript" src="/public/js/jquery-1.4.2.min.js"></script>
<script type="text/javascript" src="/public/js/json2.js"></script>   
<script type="text/javascript" src="/public/js/geo.js"></script>   
<script type="text/javascript" src="/public/js/fsm.js"></script>   
<script type="text/javascript">
	var map
	var add_map
	var position
	var user
	var add_user
	var picks = <%= params["picks"].toSource() %> 
	var edit = <%= params["edit"] %>

	function addMarker(pick) {
		var marker = new google.maps.Marker({
			position: new google.maps.LatLng(pick.data.lat, pick.data.lng), 
			map: map,
			title: pick.data.name + " by " + pick.data.referer_name
		})

		var contents = new Array()
		contents.push("<span id=\"map_name\">")
		contents.push(pick.data.name)
		contents.push("</span><span id=\"map_tags\">")
		contents.push("(" + (pick.data.tags && pick.data.tags.length > 0 ? pick.data.tags.join(" ") : "&lt;untagged&gt;") + ")")
		contents.push("</span><br/>")
		contents.push("<span id=\"map_referer\">by ")
		contents.push(pick.data.referer_name)
		contents.push("</span>")
		contents.push("<div class=\"map_comments\">")
		for(var i = 0 ; i < pick.comments.length ; i++) {
			contents.push(pick.comments[i].comment)
			contents.push(" -")
			contents.push(pick.comments[i].author)
			contents.push("<br/>")
		}
		contents.push("</div>")

		google.maps.event.addListener(marker, 'click', function(event) {
			var info = (new google.maps.InfoWindow({
        			content: contents.join("")
    			})).open(map, marker)
		})
	}

        function refreshMap() {
                if(!map) {      
                        map = new google.maps.Map(document.getElementById("map"), {
                                zoom: 17,
                                mapTypeControl: false,
                                disableDoubleClickZoom: true,
                                mapTypeId: google.maps.MapTypeId.ROADMAP
                        })

                        user = new google.maps.Marker({
                                position: new google.maps.LatLng(position.coords.latitude,position.coords.longitude), 
                                map: map,
                                icon: "/public/img/user.gif",
                                title:"Me!"
                        })

                        for(var i = 0 ; i < picks.length ; i++) {
                                addMarker(picks[i])
                        }
                } else {
                        user.setMap(null)
                        user = new google.maps.Marker({
                                position: new google.maps.LatLng(position.coords.latitude,position.coords.longitude), 
                                map: map,
                                icon: "/public/img/user.gif",
                                title:"Me!"
                        })
               	}
 
		map.setCenter(new google.maps.LatLng(position.coords.latitude, position.coords.longitude))
        }

	function refreshAddMap() {
		if(!add_map) {
			var width = Math.min(960, $(window).width() - 10)
			$("#add_map").width(width)
			$("#add_map").height(3 * width / 4)
			$(".input").width($(window).width() - 16)
			$("#comment").width($(window).width() - 16)

			add_map = new google.maps.Map(document.getElementById("add_map"), {
				zoom: 20,
				mapTypeControl: false,
				disableDoubleClickZoom: true,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			})

			add_user = new google.maps.Marker({
						position: new google.maps.LatLng(position.coords.latitude, position.coords.longitude), 
						map: add_map,
						draggable: true,
						title: "New pick" 
					})
		} else {
			add_user.setMap(null)
			add_user = new google.maps.Marker({
						position: new google.maps.LatLng(position.coords.latitude, position.coords.longitude), 
						map: add_map,
						draggable: true,
						title: "New pick" 
					})
		}

		add_map.setCenter(new google.maps.LatLng(position.coords.latitude, position.coords.longitude))
	}

	function refreshList() {
		if(geolocation && position) {
			for(var i = 0 ; i < picks.length ; i++) {
				picks[i].dist = calcDist(position.coords.latitude, position.coords.longitude, picks[i].data.lat, picks[i].data.lng)
			}

		} else {
			for(var i = 0 ; i < picks.length ; i++) {
				picks[i].dist = 0 
			}
		}

		picks.sort(function(a, b) {
			return a.dist - b.dist
		})

		var contents = new Array()
		for(var i = 0 ; i < picks.length ; i++) {
			contents.push("<div class=\"item\" onclick='window.location=\"/p/")
			contents.push(picks[i].key)
			contents.push("\"'><div class=\"left\"><h1>")
			contents.push(picks[i].data.name)
			contents.push("</h1><h2>")
			contents.push(picks[i].dist > 1 ? picks[i].dist + " km" : parseInt(picks[i].dist * 100) + " m")
			contents.push(" away")
			contents.push("</h2></div><div class=\"right\"><h2>")
			if(picks[i].data.tags) {
				contents.push(picks[i].data.tags.join(" "))
			}
			contents.push("</h2>")
			contents.push("<h2>posted by ")
			contents.push(picks[i].data.referer_name + "</h2></div></div>")
		}

		$("#list").html(contents.join(""))
	}

	function updatePosition(p) {
		if(position && calcDist(position.coords.latitude, position.coords.longitude, p.coords.latitude ,p.coords.longitude) <= 0.02) {
			return
		}

		position = p
	
		if(state.state_name == "list") {
			refreshList()
		} else if(state.state_name == "map") {
			refreshMap()
		} else if(state.state_name == "new_pick") {
			refreshAddMap()	
		}
	}

	$(document).ready(function () {
		if($(window).width() >= 640) {
			var width = Math.min(800, $(window).width())
			var map_width = parseInt(width * 0.6);
			var list_width = width - map_width - 10;
			map_width -= 10;
			$("#map").width(map_width)
			$("#map").height(3 * map_width / 4)
			$("#list").width(list_width)
		} else {
			$("#map").width($(window).width())
			$("#map").height($(window).height() - 30)
			$("#list").width("100%")
		}

		$("#listButton").click(function() {
			state.handle("LIST")		
		})
		$("#mapButton").click(function() {
			state.handle("MAP")		
		})
		$("#addButton").click(function() {
			state.handle("ADD")
		})
		$("#create_add").click(function() {
			state.handle("ADD")
		})
		$("#create_cancel").click(function() {
			state.handle("CANCEL")
		})
		$("#yoursButton").click(function() {
			window.location = "/r/<%= params["edit"] ? session["uid"] : "" %>"
		})
		$("#name").keypress(function() {
			$("#create_add").attr("disabled", "")
		})

		state = new FSM({
			start: function(fsm, event) {
				fsm.trans('init')
			},
			init: {
				onenter: function(fsm, event) {
					if(geolocation) {
						geolocation.getCurrentPosition(
							updatePosition,
							function() { updatePosition({ coords: { latitude: 35.65857, longitude: 139.74542 }})},
							{ maximumAge: 0, enableHighAccuracy: true })
						geolocation.watchPosition(
							updatePosition,
							function() {},
							{ maximumAge: 0, enableHighAccuracy: true })
					} else {
						updatePosition({ coords: { latitude: 35.65857, longitude: 139.74542 }})
					}

					if($(window).width() >= 640) {
						fsm.trans("dual")
					} else {
						var tokens = window.location.href.split("#")
						if(tokens.length > 1) {
							fsm.trans(tokens[1])
						} else {
							fsm.trans("list")
						}
					}	
				}
			},
			dual: {
				onenter: function(fsm, event) {
					$("#container").show()
					$("#map").show()
					$("#list").show()
					$("#listButton").hide()
					$("#mapButton").hide()
				
					if(edit) {	
						$("#addButton").show()
						$("#yoursButton").show()
					}

					refreshList()
					refreshMap()
				},
				onexit: function(fsm, event) {
					$("#container").hide()
				},
				ADD: function(fsm, event) {
					fsm.trans('new_pick', event)
				}
			},
			list: {
				onenter: function(fsm, event) {
					$("#list").show()
					$("#listButton").hide()
					$("#mapButton").show()
				
					if(edit) {	
						$("#addButton").show()
						$("#yoursButton").show()
					}

					refreshList()
				},
				onexit: function(fsm, event) {
					$("#list").hide()
				},
				MAP: function(fsm, event) {
					fsm.trans('map', event)
				},
				ADD: function(fsm, event) {
					fsm.trans('new_pick', event)
				}
			},
			map: {
				onenter: function(fsm, event) {	
					$("#map").show()
					$("#mapButton").hide()
					$("#listButton").show()

					if(edit) {	
						$("#addButton").show()
						$("#yoursButton").show()
					}
				
					refreshMap()	
				},
				onexit: function(fsm, event) {
					$("#map").hide()
				},
				LIST: function(fsm, event) {
					fsm.trans('list', event)
				},
				ADD: function(fsm, event) {
					fsm.trans('new_pick', event)
				}
			},
			new_pick: {
				onenter: function(fsm, event) {
					$("#nav").hide()
					$("#create_form").show()
					$("#name").val("")
					$("#tags").val("")
					$("#comment").val("")

					$("#create_add").attr("disabled", "disabled")

					refreshAddMap()
				},
				onexit: function(fsm, event) {
					$("#create_form").hide()
					$("#nav").show()
				},
				ADD: function(fsm, event) {
					fsm.trans('add_marker', { latLng: add_user.getPosition() })
				},
				CANCEL: function(fsm, event) {
					if($(window).width() >= 640) {
						fsm.trans("dual", event)
					} else { 
						fsm.trans('list', event)
					}
				}
			},
			add_marker: {
				onenter: function(fsm, event) {
					$("#nav").hide()
					$("#add_pick").show()

					$.ajax({
						type: "POST",
						url: "/pick/post",
						contentType: "application/json",
						dataType: 'json',
						data: JSON.stringify({
							name: $("#name").val(),
							lat: event.latLng.lat(),
							lng: event.latLng.lng(),
							tags: $("#tags").val(),
							comment: $("#comment").val()
						}),
						success: function(pick) {
							picks.push(pick)
							if($(window).width() >= 640) {
								fsm.trans("dual", event)
							} else { 
								fsm.trans('list', event)
							}
						},
						error: function(req, errorText, errorThrown) {
							alert("something blew up")
							if($(window).width() >= 640) {
								fsm.trans("dual", event)
							} else { 
								fsm.trans('list', event)
							}
						}
					})
				},
				onexit: function(fsm, event) {
					$("#add_pick").hide()
				}
			}
		})
		
		state.start('startup')
	})
</script>
</head>
<body>
	<div id="nav">
		<input type="button" id="addButton" value="+ Pick"/>
		<input type="button" id="listButton" value="List"/>
		<input type="button" id="mapButton" value="Map"/>
		<input type="button" id="yoursButton" value="Your Picks"/>
	</div>
	<div id="container">
		<div id="map"</div>
		<div id="list"></div>
	</div>
	<div id="create_form">
		<h1>Add Pick</h1>
		<label for="name">Name</label>
		<input class="input" type="text" name="name" id="name"/>
		<label for="tags">Tag</label>
		<input class="input" type="text" name="tags" id="tags"/>
		<label for="comment">Add a comment</label>
		<textarea name="comment" id="comment"></textarea>
		<h2>tip: you can drag the marker around</h2>
		<div id="add_map"></div>	
		<input type="button" id="create_add" value="OK"/>
		<input type="button" id="create_cancel" value="Cancel"/>
	</div>
	<div id="add_pick">
		<p>Adding Pick...</p>
		<img src="/public/img/spinner.gif"/>	
	</div>
</body>

