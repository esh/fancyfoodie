<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no"/>
<meta name="apple-mobile-web-app-capable" content="yes"/>
<style type="text/css">
	html, body {
		height: 100%;
		margin: 0px;
		padding: 0px
	}
	#nav {
		position: fixed;
		top: 0px;
		width: 100%;
		height: 30px;
		padding: 2px 0px 2px 0px;
		font-size: 16px;
		background-color: white;
	}
	span {
		margin: 0px;
		padding: 0px;
	}
	button {
		font: bold 25px;
		background-color: white;
		border: 1px solid black;
	}
	#map {
		position: fixed;
		top: 30px;
		margin: 0;
		padding: 0;
	}
	#map_name {
		font-size: 20px;
		font-weight: bold;
	}
	#map_tags, #map_referer {
		font-size: 10px;
		font-weight: normal;
	}
	.map_comments {
		margin-top: 8px;
	}
	#add_pick {
		text-align: center;
	}
	#create_form {
		width: 100%;
		margin: 0; 
		padding: 5px 5px 5px 5px;
	}
	label {
		display: block;
		width: 100%;
		margin: 0;
		padding: 0;
	}
	.input {
		font-size: 16px;
		height: 20px;
		width: 100%;
		padding: 0;
		margin: 0;
	}
	textarea {
		font-size: 16px;
		width: 100%;
		height: 45px;
		padding: 0px;
	}
	#list {
		width: 100%;
		margin: 30px 0px 0px 0px; 
                padding: 5px 0px 0px 0px;
	}
        #list h1 {
                margin: 0;
                padding: 5px 5px 5px 5px;
                font-size: 20px;
                font-weight: bold;
        }
        #list h2 {
                margin: 0;
                padding: 5px 5px 5px 5px;
                font-size: 10px;
                font-weight: normal;
        }
	#listButton, #cancelMapItButton, #list, #map, #create_form, #add_pick {
		display: none;
	}
	.left {
		display: table-cell;
		width: 50%;
		margin:0px;
		padding:0px;
	}
	.right {
		display: table-cell;
		width: 50%;
		margin:0px;
		padding:0px;
		text-align: right;	
	}
	.item {
		display: table;
		width: 100%;
		margin: 0px;
		padding: 0px;
		border-top: 1px solid black;	
	}
</style>
<title>Fancy Foodie</title>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript" src="http://code.google.com/apis/gears/gears_init.js"></script>
<script type="text/javascript" src="/public/js/jquery-1.4.2.min.js"></script>
<script type="text/javascript" src="/public/js/json2.js"></script>   
<script type="text/javascript" src="/public/js/geo.js"></script>   
<script type="text/javascript" src="/public/js/fsm.js"></script>   
<script type="text/javascript">
	var map
	var position
	var addPosition
	var user
	var self_uid = <%= session["uid"] %>
	var picks = <%= params["picks"].toSource() %> 
	var edit = <%= params["edit"] %>

	function addMarker(pick) {
		var marker = new google.maps.Marker({
			position: new google.maps.LatLng(pick.data.lat, pick.data.lng), 
			map: map,
			title: pick.data.name + " by " + pick.data.referer_name
		})

		var contents = new Array()
		contents.push("<span id=\"map_name\">")
		contents.push(pick.data.name)
		contents.push("</span><span id=\"map_tags\">")
		contents.push("(" + (pick.data.tags && pick.data.tags.length > 0 ? pick.data.tags.join(" ") : "&lt;untagged&gt;") + ")")
		contents.push("</span><br/>")
		contents.push("<span id=\"map_referer\">by ")
		contents.push(pick.data.referer_name)
		contents.push("</span>")
		contents.push("<div class=\"map_comments\">")
		for(var i = 0 ; i < pick.comments.length ; i++) {
			contents.push(pick.comments[i].comment)
			contents.push(" -")
			contents.push(pick.comments[i].author)
			contents.push("<br/>")
		}
		contents.push("</div>")

		google.maps.event.addListener(marker, 'click', function(event) {
			var info = (new google.maps.InfoWindow({
        			content: contents.join("")
    			})).open(map, marker)
		})
	}

	function refreshMap() {
		if(!map) {	
			map = new google.maps.Map(document.getElementById("map"), {
				zoom: 17,
				mapTypeControl: false,
				disableDoubleClickZoom: true,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			})

			user = new google.maps.Marker({
				position: new google.maps.LatLng(position.coords.latitude, position.coords.longitude), 
				map: map,
				icon: "/public/img/user.gif",
				title:"Me!"
			})

			map.setCenter(new google.maps.LatLng(position.coords.latitude,position.coords.longitude))

			for(var i = 0 ; i < picks.length ; i++) {
				var marker = new google.maps.Marker({
					position: new google.maps.LatLng(picks[i].data.lat, picks[i].data.lng), 
					map: map,
					title: picks[i].data.name + " by " + picks[i].data.referer_name
				})

				var contents = new Array()
				contents.push("<span id=\"map_name\">")
				contents.push(picks[i].data.name)
				contents.push("</span><span id=\"map_tags\">")
				contents.push("(" + (picks[i].data.tags && picks[i].data.tags.length > 0 ? picks[i].data.tags.join(" ") : "&lt;untagged&gt;") + ")")
				contents.push("</span><br/>")
				contents.push("<span id=\"map_referer\">by ")
				contents.push(picks[i].data.referer_name)
				contents.push("</span>")
				contents.push("<div class=\"map_comments\">")
				for(var j = 0 ; j < picks[i].comments.length ; j++) {
					contents.push(picks[i].comments[j].comment)
					contents.push(" -")
					contents.push(picks[i].comments[j].author)
					contents.push("<br/>")
				}
				contents.push("</div>")

				google.maps.event.addListener(marker, 'click', function(event) {
					var info = (new google.maps.InfoWindow({
						content: contents.join("")
					})).open(map, marker)
				})
			}
		}
	}

	function loadAddMap() {
		var width = Math.min(960, $(window).width() - 10)
		$("#addMap").width(width)
		$("#addMap").height(3 * width / 4)

		addMap = new google.maps.Map(document.getElementById("addMap"), {
			zoom: 17,
			mapTypeControl: false,
			disableDoubleClickZoom: true,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		})

		addMap.setCenter(new google.maps.LatLng(position.coords.latitude,position.coords.longitude))
			map.setCenter(new google.maps.LatLng(position.coords.latitude,position.coords.longitude))

		addPosition = new google.maps.Marker({
					position: new google.maps.LatLng(position.coords.latitude, position.coords.longitude), 
					map: addMap,
					draggable: true,
					title: "New pick" 
				})
	}

	function refreshList() {
		function calcDist(lat1, lon1, lat2, lon2) {
			lat1 = lat1 * Math.PI / 180
			lat2 = lat2 * Math.PI / 180
			lon1 = lon1 * Math.PI / 180
			lon2 = lon2 * Math.PI / 180
>>>>>>> first cut:app/view/main.jhtml

		if(user) {
			user.setMap(null)
			user = new google.maps.Marker({
				position: new google.maps.LatLng(position.coords.latitude,position.coords.longitude), 
				map: map,
				icon: "/public/img/user.gif",
				title:"Me!"
			})
		}
	}

	function refreshList() {
		if(geolocation && position) {
			for(var i = 0 ; i < picks.length ; i++) {
				picks[i].dist = calcDist(position.coords.latitude, position.coords.longitude, picks[i].data.lat, picks[i].data.lng)
			}

		} else {
			for(var i = 0 ; i < picks.length ; i++) {
				picks[i].dist = 0 
			}
		}

		picks.sort(function(a, b) {
			return a.dist - b.dist
		})

		var contents = new Array()
		for(var i = 0 ; i < picks.length ; i++) {
			contents.push("<div class=\"item\" onclick='window.location=\"/p/")
			contents.push(picks[i].key)
			contents.push("\"'><div class=\"left\"><h1>")
			contents.push(picks[i].data.name)
			contents.push("</h1><h2>")
			contents.push(picks[i].dist > 1 ? picks[i].dist + " km" : parseInt(picks[i].dist * 100) + " m")
			contents.push(" away")
			contents.push("</h2></div><div class=\"right\"><h2>")
			if(picks[i].data.tags) {
				contents.push(picks[i].data.tags.join(" "))
			}
			contents.push("</h2>")
			contents.push("<h2>posted by ")
			contents.push(picks[i].data.referer_name + "</h2></div></div>")
		}

		$("#list").html(contents.join(""))
	}

	function updatePosition(p) {
		if(position && calcDist(position.coords.latitude, position.coords.longitude, p.coords.latitude ,p.coords.longitude) <= 2) {
			return
		}

		position = p
	
		if(state.state_name == "list") {
			refreshList()
		} else if(state.state_name == "map") {
			refreshMap()
		}
	}

	$(document).ready(function () {
		$("#map").height($(window).height() - 30)
		$("#listButton").click(function() {
			state.handle("LIST")		
		})
		$("#mapButton").click(function() {
			state.handle("MAP")		
		})
		$("#addButton").click(function() {
			state.handle("ADD")
		})
		$("#createAdd").click(function() {
			state.handle("ADD")
		})
		$("#createCancel").click(function() {
			state.handle("CANCEL")
		})
		$("#yoursButton").click(function() {
			window.location = "/r/" + self_uid 
		})
		$("#name").keypress(function() {
			$("#createAdd").attr("disabled", "")
		})

		state = new FSM({
			start: function(fsm, event) {
				fsm.trans('init')
			},
			init: {
				onenter: function(fsm, event) {
					if(geolocation) {
						geolocation.getCurrentPosition(
							updatePosition,
							function() { updatePosition({ coords: { latitude: 35.65857, longitude: 139.74542 }})},
							{ maximumAge: 0, enableHighAccuracy: true })
						geolocation.watchPosition(
							updatePosition,
							function() {},
							{ maximumAge: 0, enableHighAccuracy: true })
					}

					var tokens = window.location.href.split("#")
					if(tokens.length > 1) {
						fsm.trans(tokens[1])
					} else {
						fsm.trans("list")
					}	
				}
			},
			list: {
				onenter: function(fsm, event) {
					$("#list").show()
					$("#listButton").hide()
					$("#mapButton").show()
				
					if(edit) {	
						$("#addButton").show()
						$("#yoursButton").show()
					}

					refreshList()
				},
				onexit: function(fsm, event) {
					$("#list").hide()
				},
				MAP: function(fsm, event) {
					fsm.trans('map', event)
				},
				ADD: function(fsm, event) {
					fsm.trans('new_pick', event)
				}
			},
			map: {
				onenter: function(fsm, event) {	
					$("#map").show()
					$("#mapButton").hide()
					$("#listButton").show()

					if(edit) {	
						$("#addButton").show()
						$("#yoursButton").show()
					}
				
					refreshMap()	
				},
				onexit: function(fsm, event) {
					$("#map").hide()
				},
				LIST: function(fsm, event) {
					fsm.trans('list', event)
				},
				ADD: function(fsm, event) {
					fsm.trans('new_pick', event)
				}
			},
			new_pick: {
				onenter: function(fsm, event) {
					$("#nav").hide()
					$("#create_form").show()
					$("#name").val("")
					$("#tags").val("")
					$("#comment").val("")

					$("#createAdd").attr("disabled", "disabled")
					loadAddMap()
				},
				onexit: function(fsm, event) {
					$("#create_form").hide()
				},
				ADD: function(fsm, event) {
					fsm.trans('add_marker', { latLng: addPosition.getPosition() })
				},
				CANCEL: function(fsm, event) {
					fsm.trans('list', event)
				}
			},
			add_marker: {
				onenter: function(fsm, event) {
					$("#nav").hide()
					$("#add_pick").show()

					$.ajax({
						type: "POST",
						url: "/pick/post",
						contentType: "application/json",
						dataType: 'json',
						data: JSON.stringify({
							name: $("#name").val(),
							lat: event.latLng.lat(),
							lng: event.latLng.lng(),
							tags: $("#tags").val(),
							comment: $("#comment").val()
						}),
						success: function(pick) {
							picks.push(pick)
							fsm.trans('list')
						},
						error: function(req, errorText, errorThrown) {
							alert("something blew up")
							fsm.trans('list')
						}
					})
				},
				onexit: function(fsm, event) {
					$("#add_pick").hide()
				}
			}
		})
		
		state.start('startup')
	})
</script>
</head>
<body>
	<div id="nav">
		<input type="button" id="addButton" value="+ Pick"/>
		<input type="button" id="listButton" value="List"/>
		<input type="button" id="mapButton" value="Map"/>
		<input type="button" id="yoursButton" value="Your Picks"/>
		<input type="button" id="cancelMapItButton" value="Cancel"/>
	</div>
	<div id="list"></div>
	<div id="map"</div>
	<div id="create_form">
		<h1>Add Pick</h1>
		<label for="name">Name</label>
		<input class="input" type="text" name="name" id="name"/>
		<label for="tags">Tag</label>
		<input class="input" type="text" name="tags" id="tags"/>
		<label for="comment">Add a comment</label>
		<textarea name="comment" id="comment"></textarea>
		<h2>tip: you can drag the marker around</h2>
		<div id="addMap"></div>	

		<input type="button" id="createAdd" value="OK"/>
		<input type="button" id="createCancel" value="Cancel"/>
	</div>
	<div id="add_pick">
		<p>Adding Pick...</p>
		<img src="/public/img/spinner.gif"/>	
	</div>
</body>

